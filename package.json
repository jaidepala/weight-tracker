{
	"name": "react-sample-2019",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"start": "node index.js",
		"start-env": "if-env NODE_ENV=production ?? npm run start-prod || npm run start-dev",
		"start-prod": "node .",
		"start-dev": "nodenv -f .",
		"preload": "node -r dotenv/config index.js",
		"ss": "npm run start-server",
		"sc": "npm run start-client",
		"start-server": "nodemon index.js",
		"start-client": "cd client && npm start",
		"start-both": "concurrently --kill-others \"npm run start-server\" \"npm run start-client\" ",
		"install-both": "concurrently --kill-others \"npm install\" \"cd client\" \"npm install\" ",
		"heroku-postbuild": "cd client && npm install && npm run build",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"engines": {
		"node": "8.12.0",
		"npm": "6.4.1"
	},
	"keywords": [],
	"author": "Jay Depala",
	"license": "ISC",
	"dependencies": {
		"bcrypt": "^3.0.6",
		"body-parser": "^1.19.0",
		"connect-mongo": "^3.0.0",
		"connect-redis": "^4.0.3",
		"cors": "^2.8.5",
		"express": "^4.17.3",
		"express-session": "^1.17.0",
		"http-proxy-middleware": "^0.19.1",
		"if-env": "^1.0.4",
		"jsonwebtoken": "^8.3.0",
		"mongoose": "^5.6.10",
		"morgan": "^1.9.1",
		"redis": "^2.8.0",
		"redis-server": "^1.2.2"
	},
	"devDependencies": {
		"concurrently": "^4.1.2",
		"dotenv": "^7.0.0",
		"node-env-run": "^3.0.2",
		"nodemon": "^1.18.10"
	}
}
