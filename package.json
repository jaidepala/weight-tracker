{
    "name": "react-sample-2019",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "start-env": "if-env NODE_ENV=production ?? npm run start-prod || npm run start-dev",
        "start-prod": "node .",
        "start-dev": "nodenv -f .",
        "preload": "node -r dotenv/config index.js",
        "start-server": "nodemon index.js",
        "start:dev": "nodemon --ignore sessions/ index.js",
        "json:server": "json-server --watch ./db/db.json --port 5000",
        "start-client": "cd client && npm start",
        "start-both": "concurrently --kill-others \"npm run start-server\" \"npm run start-client\" ",
        "install-both": "concurrently --kill-others \"npm install\" \"cd client\" \"npm install\" ",
        "heroku-postbuild": "cd client && npm install && npm run build",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "engines": {
        "node": "8.12.0",
        "npm": "6.4.1"
    },
    "keywords": [],
    "author": "Jay Depala",
    "license": "ISC",
    "dependencies": {
        "axios": "^0.19.0",
        "bcrypt": "^3.0.6",
        "bcrypt-nodejs": "0.0.3",
        "body-parser": "^1.19.0",
        "connect-mongo": "^3.0.0",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "express-session": "^1.16.2",
        "http-proxy-middleware": "^0.19.1",
        "if-env": "^1.0.4",
        "json-server": "^0.15.1",
        "jsonwebtoken": "^8.3.0",
        "mongoose": "^5.6.10",
        "morgan": "^1.9.1",
        "passport": "^0.4.0",
        "passport-local": "^1.0.0",
        "password-generator": "^2.2.0",
        "session-file-store": "^1.3.1",
        "uuid": "^3.3.3"
    },
    "devDependencies": {
        "concurrently": "^4.1.2",
        "dotenv": "^7.0.0",
        "node-env-run": "^3.0.2",
        "nodemon": "^1.19.3"
    }
}
